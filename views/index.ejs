<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <form action="/submit" method="post">
        <input type="text" name="title" placeholder="Enter your name" >
        <textarea name="description" placeholder="Enter your message" ></textarea>
        <input type="submit" value="Submit"> 
    </form>
    <ul>
        <% if (Array.isArray(files) && files.length > 0) { %>
            <% files.forEach(file => { %>
                <li>
                    <a href="/files/<%= encodeURIComponent(file) %>" target="_blank"><%= file %></a>
                    <a href="/edit/<%= encodeURIComponent(file) %>" target="_blank">Edit</a>
                </li>
            <% }); %>
        <% } else { %>
            <li>No files found.</li>
        <% } %>
    </ul>


</body>
</html>